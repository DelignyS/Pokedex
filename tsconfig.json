{
  "compilerOptions": {
    "target": "es5", // it means that the code will be compiled to ES5
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react", // it means that the code will be compiled to React from som JSX. TSX = TS + JSX
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src"
  ]
}